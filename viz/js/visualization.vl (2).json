{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Predicted Populations of Countries in 2021",
  "data": {
    "url": "https://raw.githubusercontent.com/farwabraza/Homework10/main/viz/data/globalpop.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 1000,
      "bind": {
        "input": "range",
        "min": 10000,
        "max": 1500000000,
        "step": 10000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Region",
      "bind": {
        "input": "select",
        "options": [
          null,
          "East Asia & Pacific",
          "South Asia",
          "North America",
          "Latin America & Caribbean",
          "Sub-Saharan Africa",
          "Europe & Central Asia",
          "Middle East & North Africa"
        ],
        "labels": [
          "Show All",
          "East Asia & Pacific",
          "South Asia",
          "North America",
          "Latin America & Caribbean",
          "Sub-Saharan Africa",
          "Europe & Central Asia",
          "Middle East & North Africa"
        ],
        "name": "Region:"
      }
    }
  ],
  "transform": [
    {
      "calculate": "parseFloat(datum.Net) + parseFloat(datum.Population)",
      "as": "Expected_Population"
    },
    {"filter": "datum.Population > 0"},
    {"filter": "datum.Net > 0"},
    {"filter": "datum.Expected_Population > Population_Above"},
    {"filter": "Region == null || datum.Region == Region"}
  ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "title": "Current Population",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [1, 10000000000]}
    },
    "y": {
      "field": "Net",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [1, 100000000]}
    }
  },
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Expected_Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100000, 1000000, 10000000, 100000000, 1000000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "East Asia & Pacific",
              "South Asia",
              "North America",
              "Latin America & Caribbean",
              "Sub-Saharan Africa",
              "Europe & Central Asia",
              "Middle East & North Africa"
            ],
            "range": [
              "#d73027",
              "#fc8d59",
              "#fee090",
              "#a6cee3",
              "#91bfdb",
              "#4575b4"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "World_Share", "type": "quantitative", "format": ","},
          {"field": "Net", "type": "quantitative", "format": ","},
          {
            "field": "Expected_Population",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'India' || datum['Country'] == 'Pakistan' || datum['Country'] == 'Spain' || datum['Country'] == 'Egypt' || datum['Country'] == 'Malaysia'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "World_Share", "type": "quantitative", "format": ","},
          {"field": "Net", "type": "quantitative", "format": ","},
          {
            "field": "Expected Population",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    }
  ],
  "config": {}
}